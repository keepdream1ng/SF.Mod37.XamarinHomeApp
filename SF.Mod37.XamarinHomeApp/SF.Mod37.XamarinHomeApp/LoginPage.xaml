<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:SF.Mod37.XamarinHomeApp"
             x:Class="SF.Mod37.XamarinHomeApp.LoginPage">
    <ContentPage.Content>

        <StackLayout
        VerticalOptions="Center"
        HorizontalOptions="Center">
            <Label
            Text="HomeApp - your smart home app."
            FontSize="Title"
            Padding="30,10,30,10"
            VerticalTextAlignment="Center"
            HorizontalTextAlignment="Center"/>
            <Button
            x:Name="loginButton"
            Text="{x:Static local:LoginPage.BUTTON_TEXT}"
            Clicked="Login_Click" />
            <Label
                x:Name="errorMessage"
                FontSize="Small"
                TextColor="Red"
                Padding="30,10,30,10"
                VerticalTextAlignment="Center"
                HorizontalTextAlignment="Center"/>
        </StackLayout>

    </ContentPage.Content>
</ContentPage>