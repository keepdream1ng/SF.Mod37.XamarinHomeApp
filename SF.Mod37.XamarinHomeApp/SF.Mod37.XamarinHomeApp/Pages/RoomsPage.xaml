<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SF.Mod37.XamarinHomeApp.Pages.RoomsPage">
    <ContentPage.Content>
        <StackLayout
            HorizontalOptions="Center">
            <Label
                Text="HomeApp - your rooms"
                HorizontalOptions="Center"
                FontSize="Title"
                Padding="30,10,30,10"
                />
            <ListView BackgroundColor="Azure" >
                <ListView.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>Kitchen</x:String>
                        <x:String>Bathroom</x:String>
                        <x:String>Livingroom</x:String>
                    </x:Array>
                </ListView.ItemsSource>
            </ListView>
            <Button
                x:Name="addButton"
                Text="Add room"
                />
        </StackLayout>

    </ContentPage.Content>
</ContentPage>
